<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/size_45</item>
        <item name="android:layout_height">@dimen/size_45</item>
    </style>

    <style name="QueryOrderTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_45</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/tab_query_order_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/spacing_large</item>
        <item name="android:paddingRight">@dimen/spacing_large</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/selector_text_orange</item>
    </style>

    <style name="GoodsTabTextView">
        <item name="android:layout_width">@dimen/size_80</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/tab_goods_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/AppBarText.Normal</item>
    </style>

    <style name="HorizontalItemTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_54</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:drawableRight">@drawable/ic_chevron_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:textAppearance">@style/ContentText.Large</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ContentText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="ContentText.FixedSmall">
        <item name="android:textSize">@dimen/font_small_fixed</item>
    </style>

    <style name="ContentText.Small">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="ContentText.Normal">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="ContentText.Large">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="AppBarText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/app_bar_text</item>
    </style>

    <style name="AppBarText.Normal">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="AppBarText.Huge">
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

    <style name="base_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="me_vertical_view_style">
        <item name="android:layout_width">0.5dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#50666666</item>
    </style>

    <style name="me_horizontal_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">#50666666</item>
    </style>

    <style name="me_userLayout_textView_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@drawable/list_view_item_click</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/grad</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="me_common_item_relativeLayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/list_view_item_click</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="me_common_item_icon_imageView_style">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <style name="me_common_item_title_textView_style" parent="base_textView_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/textColor_32</item>
    </style>

    <style name="me_common_item_arrow_right_imageView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/arrow_right</item>
    </style>

    <style name="me_common_item_count_textView_style" parent="base_textView_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray01</item>
        <item name="android:textSize">12dp</item>
    </style>



</resources>
